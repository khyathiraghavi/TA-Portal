{{extend 'layout.html'}}
<style>
  .white_content1 {
    display: none;
    position: absolute;
    top: 10%;
    left: 25%;
    width: 50%;
    height: 70%;
    padding: 16px;
    border: 16px;
    background-color: white;
    z-index:1002;
    overflow: auto;
    -moz-opacity: 1;
    opacity:1;
    filter: alpha(opacity=100);
    border-radius:4px;
    -moz-border-radius:4px;
    -webkit-border-radius:4px;
  }
  .black_overlay1{
    display: none;
    position: fixed;
    top: 0%;
    left: 0%;
    width: 100%;
    height: 100%;
    background-color: black;
    z-index:1001;
    -moz-opacity: 0.8;
    opacity:.80;
    filter: alpha(opacity=80);
  }
</style>
<div class="content_heading">FOR ANY QUERIES PLEASE CONTACT</div>
<script type='text/javascript'>
  function mywin(roll){
    document.getElementById( roll + "light").style.display="block";
    document.getElementById("fade1").style.display="block";
  }
function closewin(roll){
  document.getElementByClass("white_content1").style.display="none";
  document.getElementById("fade1").style.display="none";
  }
  $(document).keyup(function(e) {
  if (e.keyCode == 27) 
  { 
      $(".white_content1").css("display","None");
      $(".black_overlay1").css("display","None"); 
      }   // esc
</script>
<div id='fade1' class='black_overlay1' ></div>
<font size='3' >
<div class="simple">
  <table>  
  {{for i in r:}}
	<tr>
  		<td>Name:</td>
  		<td><a href="javascript:void(0)" onclick = "mywin({{=i.id}})"><u>{{=i.adname}}</u></a></td>
  	</tr>
  	<tr>
  		<td>Email-id:</td><td>{{=i.ademail_id}}</td>
  	</tr>
      {{pass}}
</table>
</div>
  
  <div id={{=str(i.id)+'light'}} class='white_content1' onkeydown="myfunc()">
    <a href="#"  onclick="closewin({{=i.id}})"><font color='red'>X</font></a><br />
    <div id="form">
    <form action="admin_contact">
      <table>
        <tr><td>reciever:</td><td><input type='text' value={{=i.ademail_id}} readonly name='reciever' id={{=str(i.id) + 'reciever'}}></td></tr>
        <tr><td>sender:</td><td><input type='text' value={{=session.token}} readonly name='sender' id={{=str(i.id) + 'sender'}} ></td></tr>
        <tr><td>Subject:</td><td><textarea rows='1' cols='35' name='subject' id={{=str(i.id) + 'Subject'}} ></textarea></td></tr>
        <tr><td>Content:</td><td><textarea  rows="4" cols="35" id={{=str(i.id) + "Content"}} name='Content'></textarea></td></tr>
        <tr><td colspan='2' align='center'><input type='submit' value='submit' name='submit'></td></tr>
    </table>
  </form>
    </div>
  {{pass}}
</font>

